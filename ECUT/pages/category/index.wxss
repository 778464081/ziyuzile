page {
  height: 100%;
}
.cates {
  height: 100%;
}
.cates .cates_container {
  /* less中使用calc须注意*/
  height: calc( 100vh - 90rpx);
  display: flex;
}
.cates .cates_container .leftmenu {
  flex: 2;
}
.cates .cates_container .leftmenu .menu_item {
  height: 88rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.cates .cates_container .leftmenu .active {
  color: var(--themeColor);
  border-left: 5rpx solid currentColor;
}
.cates .cates_container .rightmenu {
  /*子项高度100%flex*/
  flex: 5;
}
.cates .cates_container .rightmenu .goods_group .goods_title {
  color: #ccc;
  padding: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cates .cates_container .rightmenu .goods_group .goods_title .delimiter {
  color: #ccc;
  padding: 0 10rpx;
}
.cates .cates_container .rightmenu .goods_group .goods_list {
  display: flex;
  flex-wrap: wrap;
}
.cates .cates_container .rightmenu .goods_group .goods_list navigator {
  width: 33.33%;
  text-align: center;
}
